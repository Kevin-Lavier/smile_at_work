<!-- Container for centering the login form with top and bottom padding -->
<div class="flex items-center justify-center pt-16 pb-12">
  <!-- Login form container with a maximum width, white background, padding, rounded corners, and a shadow -->
  <div class="w-full max-w-md bg-white p-8 rounded shadow">
    <!-- Header for the login form -->
    <h2 class="text-2xl font-bold mb-6 text-center">Connexion</h2>

    <% if @error %>
      <!-- Display an error message if one exists -->
      <p class="text-red-500 text-center mb-4"><%= @error %></p>
    <% end %>

    <!-- Login form that sends a POST request to the /login route -->
    <form action="/login" method="POST" class="space-y-4">
      <!-- Email input field -->
      <input type="email" name="email" placeholder="Email" required class="w-full p-2 border border-gray-300 rounded">
      <!-- Password input field -->
      <input type="password" name="password" placeholder="Mot de passe" required class="w-full p-2 border border-gray-300 rounded">
      <!-- Submit button -->
      <button type="submit" class="w-full bg-gray-500 text-white py-2 rounded hover:bg-gray-600 transition">
        Se connecter
      </button>
    </form>

    <!-- Link to the signup page for users who don't have an account -->
    <p class="mt-4 text-center text-sm text-gray-600">
      Pas encore de compte ? <a href="/signin" class="text-blue-600 hover:underline">Cr√©er un compte</a>
    </p>
  </div>
</div>
