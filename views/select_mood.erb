<!-- Container for the mood selection page -->
<div class="flex items-center justify-center pt-16 pb-12 bg-gray-100 px-4">
  <div class="max-w-2xl w-full">
    <!-- Heading with a personalized greeting using the user's name -->
    <h2 class="text-3xl font-bold text-center mb-8">
      Comment tu te sens aujourd’hui, <%= @user.name %> ?
    </h2>

    <!-- Grid container for displaying the mood emojis -->
    <div class="grid grid-cols-3 gap-6 text-6xl text-center">
      <% ["😄", "🙂", "😐", "😕", "😢", "😡"].each do |emoji| %>
        <!-- Form for each emoji that submits the selected emoji via POST -->
        <form action="/mood" method="POST">
          <!-- Hidden field carrying the emoji value -->
          <input type="hidden" name="emoji" value="<%= emoji %>">
          <!-- Button that displays the emoji and scales up on hover -->
          <button type="submit" class="hover:scale-110 transition transform">
            <%= emoji %>
          </button>
        </form>
      <% end %>
    </div>
  </div>
</div>
